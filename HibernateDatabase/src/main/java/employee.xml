<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- Map a pojo to a table. -->
	<class name="evolution.entity.Employee" table="employee">
		<id name="employeeId" column="employee_id">
			<generator class="increment" />
		</id>
		<property name="name" column="name" />
		<set name="companies" table="company_employee" cascade="all">
			<!-- Each employee applies for many companies, so each company holds a employee ID. -->
			<key column="employee_id" />
			<many-to-many class="evolution.entity.Company" column="company_id"/>
		</set>
	</class>
</hibernate-mapping>